<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="16dp"
    tools:context=".activities.ChallengeEditorActivity">

    <TextView
        android:id="@+id/editor_title"
        style="@style/EditorTitleText"
        android:fontFamily="@font/supercell"
        android:text="@string/challenge_editor_title"
        android:textColor="@color/cell_default_text"
        android:textSize="16sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/challenges_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/add_challenge_button"
        android:layout_below="@id/editor_title"
        android:layout_marginBottom="16dp"
        android:clipToPadding="false"
        android:paddingBottom="8dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_challenge_button"
        style="@style/MainMenuButton"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/supercell"
        android:text="@string/add_new_challenge"
        android:textSize="14sp"
        app:backgroundTint="@color/team_1_color"
        app:icon="@drawable/ic_add" />

</RelativeLayout>
